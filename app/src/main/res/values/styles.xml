<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <!-- Base application theme. -->
    <style name="StyleBouton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/myshape</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>

    </style>

    <!-- Base application theme. -->
    <style name="StyleTextView" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>
    <!-- Base application theme. -->
    <style name="StyleEditView" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <!-- Base application theme. -->
    <style name="StyleRadioBouton" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

</resources>
